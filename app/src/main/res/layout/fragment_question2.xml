<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What time do you usually do academic tasks on weekends?"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/weekendStartText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select start time"
        android:textSize="16sp"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp" />

    <Button
        android:id="@+id/weekendStartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Start Time" />

    <TextView
        android:id="@+id/weekendEndText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select end time"
        android:textSize="16sp"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/weekendEndButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select End Time" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="16dp" />

    <!-- New Back Button below Next Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="8dp" />

</LinearLayout>
