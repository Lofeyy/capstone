<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What time do you usually do academic tasks on weekdays?"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/weekDaysStartText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_field_background"
        android:textColor="@android:color/white"
        android:hint="Select start time"
        android:textColorHint="@android:color/white"
        android:layout_below="@+id/titleText"
        android:padding="16dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/weekDaysStartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_color"
        android:layout_below="@id/weekDaysStartText"
        android:text="Select Start Time"/>

    <TextView
        android:id="@+id/weekDaysEndText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select end time"
        android:background="@drawable/input_field_background"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_below="@id/weekDaysStartButton"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/weekDaysEndButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_color"
        android:layout_below="@id/weekDaysEndText"
        android:text="Select End Time"/>

    <!-- Bottom Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="16dp">

        <!-- Back Button on Bottom Left -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button_color"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:text="Back" />

        <!-- Next Button on Bottom Right -->
        <Button
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button_color"
            android:layout_weight="1"
            android:text="Next" />
    </LinearLayout>

</RelativeLayout>