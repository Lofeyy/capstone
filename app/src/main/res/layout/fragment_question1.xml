<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What time do you usually do academic tasks on weekdays?"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/weekDaysStartText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select start time"
        android:textSize="16sp"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp"/>

    <Button
        android:id="@+id/weekDaysStartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Start Time"/>

    <TextView
        android:id="@+id/weekDaysEndText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select end time"
        android:textSize="16sp"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/weekDaysEndButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select End Time"/>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="16dp"/>
</LinearLayout>
